%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%% Itemize %%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setitemize[1]{label=$\bullet$, leftmargin=\baselineskip}
\setitemize[2]{label=$\star$, leftmargin=\baselineskip}
\setitemize[3]{label=$\scriptstyle\diamondsuit$, leftmargin=\baselineskip}
\setitemize[4]{label=$\ast$, leftmargin=\baselineskip}

\newenvironment{colsitem}[1]{
    \begin{multicols}{#1}\begin{itemize}
                        }{
    \end{itemize}\end{multicols}
                        }

\let\olditem\item 
\renewcommand\item[1][]{\olditem\ifx &#1&\else\textbf{#1.~}\fi}


